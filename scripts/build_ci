#!/bin/bash
mkdir bin
cd bin
ls /usr/include/SFML
g++ -c -std=c++14 -Wall -Wextra -Wshadow -Wnon-virtual-dtor -pedantic -Werror -Wno-unused-variable -fext-numeric-literals -I/usr/include/SFML -I../src ../src/*
g++ *.o -o geneak -L/usr/bin/SFML -lsfml-graphics-d -lsfml-window-d -lsfml-system-d -lsfml-audio-d
